<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#43C3C3C3"/>
            <stroke
                android:width="2dp"
                android:color="#43C3C3C3" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <solid android:color="#43C3C3C3"/>
            <stroke
                android:width="2dp"
                android:color="#43C3C3C3" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>
        <shape>

        </shape>
    </item>
</selector>