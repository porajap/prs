<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/font</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">#ffffff</item>
        <item name="android:fontFamily">@font/thai_sans_neue__regular</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/thai_sans_neue__regular</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="colorBackgroundFloating">@android:color/transparent</item>
        <item name="android:colorBackgroundFloating" tools:targetApi="23">
            @android:color/transparent
        </item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
    </style>


    <style name="myDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>


    <!-- Popup menu Style -->
    <style name="MyPopupStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:itemBackground">#ffffff</item>
        <item name="android:colorBackground">@color/colorGray</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- dialog check version -->
    <style name="DialogCheckVersionStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>


</resources>